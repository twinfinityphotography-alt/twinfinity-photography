rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null && (
        request.auth.token.email == 'admin@gmail.com' ||
        (request.auth.token.admin == true)
      );
    }

    // Public site collections
    match /categories/{catId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /services/{serviceId} {
      allow read: if resource.data.active == true;
      allow write: if isAdmin();
    }

    match /addons/{addonId} {
      allow read: if resource.data.active == true;
      allow write: if isAdmin();
    }

    match /testimonials/{testimonialId} {
      allow read: if resource.data.published == true;
      allow write: if isAdmin();
    }

    match /gallery/{imageId} {
      allow read: if resource.data.published == true;
      allow write: if isAdmin();
    }

    // Orders / Bookings
    match /orders/{orderId} {
      allow create: if true; // anyone can create a booking
      allow read, update, delete: if isAdmin(); // only admin can manage
    }

    // Settings (site, founders, adminProfile, etc.)
    match /settings/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Users (if you store user docs)
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if isAdmin();
    }

    // Deny anything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
